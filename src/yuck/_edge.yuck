(defwindow edge_disclose
  :geometry (geometry :width "2px" :height "50%" :anchor "right top")
  (edge_disclose_layout))

(defwindow edge_avatar
  :geometry (geometry :width "2px" :height "50%" :anchor "right bottom")
  (edge_avatar_layout))

(defwidget edge_disclose_layout [] (button :class "edge-disclose" :onclick "eww open --toggle disclose"))
(defwidget edge_avatar_layout [] (button :class "edge-avatar" :onclick "eww open --toggle avatar"))

