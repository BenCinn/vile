(include "./src/yuck/vertigo/_env.yuck")
(include "./src/yuck/vertigo/_modules.yuck")

(defwindow vertigo 
  :stacking "bg" 
  :windowtype "dock"
  :geometry (geometry :width "4%" :height "100%" :anchor "left center")
  :reserve (struts :distance "4%" :side "left") 
  (vertigo_layout))

(defwidget vertigo_layout []
  (box :orientation "vertical" 
       :space-evenly false
       :class "vertigo-layout-box"
    (literal :content vertigo_nodes)
    (_label :text "î§Œ"
            :tooltip "find"
            :vexpand false
            :button-class "vertigo-search-button" 
            :L `pushd ~;rofi -show;popd`)
    (literal :content vertigo_workspaces 
             :vexpand true)
    (_label :text vertigo_battery 
            :tooltip "battery: ${vertigo_battery}" 
            :vexpand false
            :valign "end"
            :button-class "vertigo-battery-button")
    (_time :format_first vertigo_time_first 
           :format_second vertigo_time_second 
           :tooltip "time ${vertigo_time_first}:${vertigo_time_second}" 
           :button-class "vertigo-time-button")
    (_revealex :revealon vertigo_revealex)
    (label :text ""
           :class "vertigo-separator")
    (_profile :M "eww update vertigo_revealex=${!vertigo_revealex}" 
              :L "eww open --toggle avatar" 
              :path vertigo_profile
              :image-class "vertigo-profile-image" 
              :button-class "vertigo-profile-button" 
              :size "50"
              :tooltip "profile")))

