(defwidget radialmeter [value]
           (circular-progress :value value
                              :start-angle 0
                              :thickness 5

(defwidget scalemeter [value min max onchange]
           (scale :value value
                  :orientation "vertical"
                  :flipped false
                  :marks ""
                  :draw-value false
                  :min min
                  :max max
                  :timeout "1s"
                  :onchange onchange))

